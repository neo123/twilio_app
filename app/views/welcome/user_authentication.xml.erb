<?xml version="1.0" encoding="UTF-8"?>
<Response>
<% if !@product_user.nil? %>
<Gather action="/welcome/provide_info.xml?token=#{@product_user.secrete_token}" numDigits="1">
<Say>Press 1 for account status.</Say>
<Say>Press 2 for account balance.</Say>
</Gather>
<% else %>
<Say>User authentication failed.</Say>
<Say>Please try again</Say>
<Redirect>/welcome/voice_reply.xml?Digits=1</Redirect>
<% end %>
<Say>Sorry, I didn't get your response.</Say>
<Redirect>/welcome/handle_wrong_input.xml?Digits=1</Redirect>
</Response>